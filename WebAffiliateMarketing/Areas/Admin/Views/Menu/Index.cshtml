@model PagedList.IPagedList<Model.EF.Menu>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<@section jsFooter{
<script src="/Assets/admin/js/controller/menuController.js"></script>
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Danh mục menu </h3>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Menu", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/Menu/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>}

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>ID</th>
                                <th>Tên Menu</th>
                                <th>Link</th>
                                <th>TypeID</th>
                                <th>Menu con</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.ID">

                                <td>@item.ID</td>
                                <td>@item.Text</td>
                                <td>@item.Link</td>
                                <td>@item.TypeID</td>
                                <td>@item.ParentID</td>
                                <td>@item.Status</td>
                                <td><a href="#" class="btn-active" data-id="@item.ID">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                <td>
                                    <a href="/Admin/Menu/Edit/@item.ID">Sửa</a>
                                    |
                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

