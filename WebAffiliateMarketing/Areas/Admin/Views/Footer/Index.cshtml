@model IEnumerable<Model.EF.Footer>

@{
    ViewBag.Title = "Footer";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Thông tin Footer </h3>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>ID</th>
                                <th>Chi tiết</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.ID</td>
                                    <td>@item.Content</td>                       
                                    <td>
                                        <a href="/Admin/Footer/Edit/@item.ID">Sửa</a>

                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table> 
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
