@model Model.EF.Product
@{
    ViewBag.Title = Model.Name;
    ViewBag.Keywords = Model.MetaKeywords;
    ViewBag.Descriptions = Model.MetaDescriptions;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = (Model.EF.ProductCategory)ViewBag.Category;
    var comment = Model.MetaTitle + "-" + Model.ID;
    var loadImage = ViewBag.loadImage;
    var relatedProducts = (List<Model.EF.Product>)ViewBag.RelatedProducts;
}





<div class="test">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 ">
            </div>
        </div>
    </div>
</div>


<div class="ps-product--detail pt-60">
    <div class="ps-container">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-lg-offset-1">
                <div class="ps-product__thumbnail">
                    <div class="ps-product__preview">
                        <div class="ps-product__variants">
                            @foreach (var item in loadImage)
                            {

                                <div class="item"><img src="@item" alt=""></div>
                            }

                        </div>
                    </div>
                    <div class="ps-product__image">
                        @foreach (var item in loadImage)
                        {
                            <div class="item"><img class="zoom" src="@item" alt="" data-zoom-image="@item"></div>

                        }
                    </div>
                </div>
                <center>
                    <div class="ps-product__thumbnail--mobile">

                        <div class="ps-product__image">
                            @foreach (var item in loadImage)
                            {

                                <div class="item"><img class="zoom" src="@item" alt="" data-zoom-image="@item"></div>

                            }
                        </div>


                        <div class="ps-product__preview">
                            <div class="ps-product__variants">
                                @foreach (var item in loadImage)
                                {

                                    <div class="item"><img src="@item" alt=""></div>
                                }

                            </div>
                        </div>
                    </div>
                </center>
                <div class="ps-product__info">
                    <div class="ps-product__rating">
                        <select class="ps-rating">
                            <option value="1">1</option>
                            <option value="1">2</option>
                            <option value="1">3</option>
                            <option value="1">4</option>
                            <option value="2">5</option>
                        </select><a href="#">(Read all 8 reviews)</a>
                    </div>
                    <h1>@Model.Name</h1>
                    <p class="ps-product__category"><a href="/san-pham/@category.MetaTitle-@category.ID"> @category.Name</a></p>
                    <div>
                        <p>Giá: <h3 class="ps-product__price">@(Model.Price.HasValue ? Model.Price.Value.ToString("N0") : "Liên hệ")</h3></p>
                    </div>
                    <div class="ps-product__block ps-product__quickview">
                        <h4>Thông tin</h4>
                        <p>@Model.Description</p>
                    </div>

                    <div class="ps-product__shopping">
                        <a class="ps-btn mb-10" href="@Model.Link">Đến nơi bán <i class="ps-icon-next"></i></a>
                        <div class="ps-product__actions">
                            <a class="mr-10" href="/them-gio-hang?productId=@Model.ID&quantity=1"><i class="ps-icon-heart"></i></a>
                        </div>
                        <div class="addthis_inline_share_toolbox"></div>
                    </div>

                </div>
                <div class="clearfix"></div>
                <div class="ps-product__content mt-50">
                    <ul class="tab-list" role="tablist">
                        <li class="active"><a href="#tab_01" aria-controls="tab_01" role="tab" data-toggle="tab">Chi tiết sản phẩm</a></li>
                        <li><a href="#tab_02" aria-controls="tab_02" role="tab" data-toggle="tab">Bình luận</a></li>

                    </ul>
                </div>
                <div class="tab-content mb-60">
                    <div class="tab-pane active" role="tabpanel" id="tab_01">
                        @Html.Raw(Model.Detail)
                    </div>
                    <div class="tab-pane" role="tabpanel" id="tab_02">

                        <div class="fb-comments" data-href="http://thang10112000-001-site1.ctempurl.com/@comment" data-width="" data-numposts="5"></div>
                    </div>
                  
               
                </div>
             
             
            </div>
        </div>
    </div>
</div>

<div class="ps-section ps-section--top-sales ps-owl-root pt-40 pb-80">
    <div class="ps-container">
        <div class="ps-section__header mb-50">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
                    <h3 class="ps-section__title" data-mask="Like">- Có thể bạn thích</h3>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                    <div class="ps-owl-actions"><a class="ps-prev" href="#"><i class="ps-icon-arrow-right"></i>Prev</a><a class="ps-next" href="#">Next<i class="ps-icon-arrow-left"></i></a></div>
                </div>
            </div>
        </div>
        <div class="ps-section__content">
            <div class="ps-owl--colection owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="5000" data-owl-gap="30" data-owl-nav="false" data-owl-dots="false" data-owl-item="4" data-owl-item-xs="1" data-owl-item-sm="2" data-owl-item-md="3" data-owl-item-lg="4" data-owl-duration="1000" data-owl-mousedrag="on">
                @foreach (var item in relatedProducts)
                {
                    var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                    <div class="ps-shoes--carousel">
                        <div class="ps-shoe">
                            <div class="ps-shoe__thumbnail">
                                <div class="ps-badge"><span>Hot</span></div> <a class="ps-shoe__favorite" href="/them-gio-hang?productId=@item.ID&quantity=1">
                                    <i class="ps-icon-heart"></i>
                                </a><img class="sizeimg" src="@item.Image" alt="@item.Name"><a class="ps-shoe__overlay" href="@url"></a>

                            </div>
                                <div class="ps-shoe__content">
                                 
                                    <div class="ps-shoe__detail">
                                        <a class="ps-shoe__name" href="@url">@item.Name</a>
                                        <p class="ps-shoe__categories"><a href="@url">Xem sản phẩm</a></p>
                                        <span class="ps-shoe__price">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                                </div>
                            </div>
                        </div>
                    </div>



