@model List<Model.EF.Menu>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-6 col-xs-12 ">
                <p class="addthis_inline_follow_toolbox"></p>
                <p>Chào mừng bạn đến với Click Shop</p>
            </div>
          
            <div class="col-lg-6 col-md-4 col-sm-6 col-xs-12 ">
                @{ var session = (UserLogin)Session[WebAffiliateMarketing.Common.CommonConstants.USER_SESSION]; }
                @if (session == null)
                {

                <div class="header__actions">

                    @foreach (var item in Model)
                    {
                        <a href="@item.Link" target="@item.Target">@item.Text</a>
                    }
                  


                </div>
                }
                else
                {
            <div class="header__actions">
                <div class="btn-group ps-dropdown">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Xin Chào: @session.UserName<i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu">
                        <li> <a href="/thong-tin">Thông tin cá nhân</a></li>
                        <li> <a href="/User/Edit/@session.UserID">Đổi mật khẩu</a></li>
                        <li>
                      
                                @Html.ActionLink("Đăng xuất", "Logout", "User")
                           
                        </li>
                    </ul>
                </div>
               
            </div>
                }
              
            </div>

                </div>
    </div>
