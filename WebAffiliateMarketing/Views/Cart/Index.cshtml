@model List<WebAffiliateMarketing.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/Assets/client/js/controller/cartController.js"></script>
    }
<div class="ps-content pt-80 pb-80">
   
        <div class="ps-container">
            <div class="ps-cart-listing">
                @if (Model.Count > 0)
                {
                    <table class="table ps-cart__table">
                        <thead>
                            <tr>
                                <th>Tất cả sản phẩm</th>
                                <th>Giá</th>
                              
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                               
                                <tr>
                                    <td><a class="ps-product__preview" href="/chi-tiet"><img class="sizeimg1" src="@item.Product.Image" alt=""> @item.Product.Name </a></td>

                                    <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>

                                    <td>
                                        <div class="ps-remove" data-id="@item.Product.ID"></div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="ps-cart__actions">
                        <div class="ps-cart__promotion">
                           
                            <div class="form-group">
                                <button id="btnContinue" class="ps-btn ps-btn--gray">Tiếp tục mua sắm</button>
                            </div>
                        </div>
                        @*<div class="ps-cart__total">
                            <a class="ps-btn" href="checkout.html">Process to checkout<i class="ps-icon-next"></i></a>
                        </div>*@
                    </div>
                }
                else
                {
                    <span class="alert alert-danger">Chưa có sản phẩm nào. </span>
                }
            </div>
        </div>

                       
</div>



