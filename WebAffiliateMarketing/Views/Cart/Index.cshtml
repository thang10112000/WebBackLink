@model List<WebAffiliateMarketing.Models.CartItem>

@{
  
    ViewBag.Title = "Sản phẩm yêu thích";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/Assets/client/js/controller/cartController.js"></script>
}
<div class="ps-content pt-80 pb-80">

    <div class="ps-container">
        <div class="ps-cart-listing">
            @if (Model.Count > 0)
            {
                <table class="table ps-cart__table">
                    <thead>
                        <tr>
                            <th>Tất cả sản phẩm</th>
                            <th>Giá</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            var url = "/chi-tiet/" + item.Product.MetaTitle + "-" + item.Product.ID;
                            <tr>
                                <td><a class="ps-product__preview" href="@url"><img class="sizeimg1" src="@item.Product.Image" alt="@item.Product.Name"> &nbsp;  @item.Product.Name </a></td>

                                <td><p>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</p></td>

                                <td>
                                    <div class="ps-remove" data-id="@item.Product.ID"></div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="ps-cart__actions">
                    <div class="ps-cart__promotion">

                        <div class="form-group">
                            <button id="btnContinue" class="ps-btn ps-btn--gray">Tiếp tục mua sắm</button>
                        </div>
                    </div>
                    @*<div class="ps-cart__total">
                    <a class="ps-btn" href="checkout.html">Process to checkout<i class="ps-icon-next"></i></a>
                </div>*@
                </div>
            }
            else
            {
                <h4> <span class="alert alert-danger">Chưa có sản phẩm nào. </span></h4>
            }
        </div>
    </div>


</div>



