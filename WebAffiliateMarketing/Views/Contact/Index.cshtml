@model Model.EF.Contact
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="/Assets/client/js/controller/contactController.js"></script>
    

}
<div class="ps-contact ps-section pb-80">
    <div id="contact-map" data-address="New York, NY" data-title="Sky Store!" data-zoom="17"></div>
    <div class="ps-container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                <div class="ps-section__header mb-50">
                    <h2 class="ps-section__title" data-mask="Liên hệ">Liên hệ</h2>
                    <form class="ps-contact__form" >
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>Họ và Tên <sub>*</sub></label>
                                    <input id="txtName" class="form-control" type="text" >
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>Điện thoại <sub>*</sub></label>
                                    <input id="txtMobile" class="form-control" type="text" >
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>Địa chỉ <sub>*</sub></label>
                                    <input id="txtAddress" class="form-control" type="text" >
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>Email <sub>*</sub></label>
                                    <input id="txtEmail" class="form-control" type="text" >
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                <div class="form-group mb-25">
                                    <label>Lời nhắn của bạn <sub>*</sub></label>
                                    <textarea id="txtContent" class="form-control" rows="6"></textarea>
                                </div>
                                <div class="">
                                    <button id="btnSend" class="ps-btn">Gửi tin nhắn<i class="ps-icon-next"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                <div class="ps-section__content">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                            <div class="ps-contact__block" data-mh="contact-block">
                                <header>
                                    <h3>Thông tin liên hệ <span>Bình Dương</span></h3>

                                </header>

                                <footer>
                                    @Html.Raw(Model.Content)

                                </footer>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



