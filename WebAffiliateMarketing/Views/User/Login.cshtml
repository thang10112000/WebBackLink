@model WebAffiliateMarketing.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="limiter">

    <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <span class="login100-form-title p-b-32">
                    Đăng nhập
                </span>
                <hr />

                <div class="form-group">
                    <span class="txt1 p-b-11">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger col-lg-6 col-md-6 col-sm-6 col-xs-12 " })
                    </span>
                </div>
                <div class="form-group">
                    <span class="txt1 p-b-11">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-6 col-xs-12" })
                    </span>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="wrap-input100 validate-input m-b-36">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "input100", @placeholder = "Nhập tài khoản..." })
                            <span class="focus-input100"></span>
                        </div>
                        <div class="form-group">
                            <span class="txt1 p-b-11">
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger col-lg-6 col-md-6 col-sm-6 col-xs-12" })
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <span class="txt1 p-b-11">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-6 col-xs-12" })
                    </span>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="wrap-input100 validate-input m-b-36">
                            @Html.PasswordFor(model => model.Password, new { @class = "input100", @placeholder = "Nhập mật khẩu..." })
                            <span class="focus-input100"></span>
                        </div>
                        <div class="form-group">
                            <span class="txt1 p-b-11">
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger col-lg-6 col-md-6 col-sm-6 col-xs-12" })
                            </span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                        <button class="ps-btn ps-btn--gray" type="submit" value="Đăng nhập">Đăng nhập</button>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
